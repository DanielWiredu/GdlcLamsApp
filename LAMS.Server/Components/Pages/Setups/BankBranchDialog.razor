@inject IUnitOfWork _unitOfWork
@inject ISnackbar _snackbar

<MudDialog>
    <DialogContent>
        <MudSelect T="int" Label="Bank" @bind-Value="Model.BankId" Required="true" RequiredError="Bank is required">
            <MudSelectItem Value="0" Disabled="true"> -- Select Bank -- </MudSelectItem>
            @foreach (var bank in Banks)
            {
                <MudSelectItem Value="@bank.BankId"> @bank.BankName </MudSelectItem>
            }
        </MudSelect>
        <MudTextField Label="Branch Name"  @bind-Value="Model.BranchName"  Required="true" RequiredError="Branch Name is required" />
        <MudTextField Label="Sort Code" @bind-Value="Model.SortCode" Required="true" RequiredError="Sort Code is required" MaxLength="6" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Save" Color="Color.Success" Variant="Variant.Filled">
            @(_isEdit ? "Update" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public TblBankBranch Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private bool _isEdit;
    private IEnumerable<TblBank> Banks = new List<TblBank>();

    protected override async Task OnInitializedAsync()
    {
        _isEdit = IsEdit;
        Banks = await _unitOfWork.Setups.GetAllBank();
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(Model.BranchName))
            return;

        if (_isEdit)
        {
            try
            {
                await _unitOfWork.Setups.UpdateBankBranch(Model);
                _snackbar.Add("Bank Branch updated successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error updating bank branch: {ex.Message}", Severity.Error);
                return;
            }  
        }
        else
        {
            try
            {
                await _unitOfWork.Setups.AddBankBranch(Model);
                _snackbar.Add("Bank Branch added successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error adding bank branch: {ex.Message}", Severity.Error);
                return;
            }
        }

        MudDialog.Close(DialogResult.Ok(true));
    }
}
