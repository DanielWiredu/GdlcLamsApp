@page "/setups-gang"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime;
@inject IUnitOfWork _unitOfWork
@inject IDialogService _dialogService
@inject ISnackbar _snackbar

<PageBreadcrumb Subtitle="Setups" Title="Gang" />

<MudTable Items="@Elements" Dense="true" Hover="true" Striped="true" FixedHeader="true" FixedFooter="true" Height="450px" RowsPerPage="20" Filter="new Func<TblGang, bool>(FilterFunc1)">
    <ToolBarContent>
        @* <MudText Typo="Typo.h6">Locations</MudText> *@
        <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium" OnClick="AddRecord"> Add New </MudButton>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>GangName</MudTh>
        <MudTh>Notes</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="GangName">@context.GangName</MudTd>
        <MudTd DataLabel="Notes">@context.Notes</MudTd>
        <MudTd DataLabel="" Class="d-flex justify-content-center gap-1">
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Dark" aria-label="edit" Size="Size.Small" OnClick="(() => EditRecord(context))"></MudIconButton>
            <MudDivider Vertical="true" FlexItem="true" />
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" aria-label="delete" Size="Size.Small" OnClick="(() => ConfirmRecordDelete(context.GangId))"></MudIconButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private string searchString1 = "";
    private IEnumerable<TblGang> Elements = new List<TblGang>();
    private TblGang? gang = new TblGang();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("loadConfig");
            await JsRuntime.InvokeVoidAsync("loadApps");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        Elements = await _unitOfWork.Setups.GetAllGangs();
    }

    private bool FilterFunc1(TblGang element) => FilterFunc(element, searchString1);

    private bool FilterFunc(TblGang element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.GangName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
    private async Task AddRecord()
    {
        var parameters = new DialogParameters<GangDialog> { { x => x.Model, new TblGang() }, { x => x.IsEdit, false } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = _dialogService.Show<GangDialog>("Add Gang", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            Elements = await _unitOfWork.Setups.GetAllGangs();
            StateHasChanged();
        }
    }

    private async Task EditRecord(TblGang editGang)
    {
        var parameters = new DialogParameters<GangDialog> { { x => x.Model,
            new TblGang { GangId = editGang.GangId,  GangName = editGang.GangName, Notes = editGang.Notes } },
            { x => x.IsEdit, true } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = _dialogService.Show<GangDialog>("Edit Gang", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            Elements = await _unitOfWork.Setups.GetAllGangs();
            StateHasChanged();
        }
    }

    private async Task ConfirmRecordDelete(int gangId)
    {
        gang.GangId = gangId;
        var parameters = new DialogParameters<DeleteConfirm> { { x => x.ContentText, "Are you sure you want to delete?" } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackdropClick = false };
        var dialog = _dialogService.Show<Shared.DeleteConfirm>("Delete", parameters, options);
        var result = await dialog.Result;
        if (!result.Canceled)
        {
            await DeleteRecord_Click(true);
        }
        else
        {
            gang.GangId = 0;
        }
    }
    public async Task DeleteRecord_Click(bool isConfirmed)
    {
        if (isConfirmed && gang.GangId != 0)
        {
            try
            {
                var response = await _unitOfWork.Setups.RemoveGang(gang.GangId);
                if (response == 1)
                {
                    _snackbar.Add("Gang Deleted Successfully!", Severity.Success);
                    Elements = await _unitOfWork.Setups.GetAllGangs();
                    StateHasChanged();
                    gang.GangId = 0;
                }
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error deleting gang: {ex.Message}", Severity.Error);
                gang.GangId = 0;
            }
        }
    }
}
