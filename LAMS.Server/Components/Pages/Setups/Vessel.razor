@page "/setups-vessel"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime;
@inject IUnitOfWork _unitOfWork
@inject IDialogService _dialogService
@inject ISnackbar _snackbar

<PageBreadcrumb Subtitle="Setups" Title="Vessel" />

<MudTable Items="@Elements" Dense="true" Hover="true" Striped="true" FixedHeader="true" FixedFooter="true" Height="500px" RowsPerPage="20" Filter="new Func<TblVessel, bool>(FilterFunc1)">
    <ToolBarContent>
        <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium" OnClick="AddRecord"> Add New </MudButton>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Vessel Name</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Vessel Name">@context.VesselName</MudTd>
        <MudTd DataLabel="" Class="d-flex justify-content-center gap-1">
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Dark" aria-label="edit" Size="Size.Small" OnClick="(() => EditRecord(context))"></MudIconButton>
            <MudDivider Vertical="true" FlexItem="true" />
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" aria-label="delete" Size="Size.Small" OnClick="(() => ConfirmRecordDelete(context.VesselId))"></MudIconButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private string searchString1 = "";
    private IEnumerable<TblVessel> Elements = new List<TblVessel>();
    private TblVessel? vessel = new TblVessel();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("loadConfig");
            await JsRuntime.InvokeVoidAsync("loadApps");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        Elements = await _unitOfWork.Setups.GetAllVessels();
    }

    private bool FilterFunc1(TblVessel element) => FilterFunc(element, searchString1);

    private bool FilterFunc(TblVessel element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.VesselName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
    private async Task AddRecord()
    {
        var parameters = new DialogParameters<VesselDialog> { { x => x.Model, new TblVessel() }, { x => x.IsEdit, false } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = _dialogService.Show<VesselDialog>("Add Vessel", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            Elements = await _unitOfWork.Setups.GetAllVessels();
            StateHasChanged();
        }
    }

    private async Task EditRecord(TblVessel editVessel)
    {
        var parameters = new DialogParameters<VesselDialog> { { x => x.Model,
            new TblVessel { VesselId = editVessel.VesselId,  VesselName = editVessel.VesselName } },
            { x => x.IsEdit, true } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = _dialogService.Show<VesselDialog>("Edit Vessel", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            Elements = await _unitOfWork.Setups.GetAllVessels();
            StateHasChanged();
        }
    }

    private async Task ConfirmRecordDelete(int vesselId)
    {
        vessel.VesselId = vesselId;
        var parameters = new DialogParameters<DeleteConfirm> { { x => x.ContentText, "Are you sure you want to delete?" } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackdropClick = false };
        var dialog = _dialogService.Show<Shared.DeleteConfirm>("Delete", parameters, options);
        var result = await dialog.Result;
        if (!result.Canceled)
        {
            await DeleteRecord_Click(true);
        }
        else
        {
            vessel.VesselId = 0;
        }
    }
    public async Task DeleteRecord_Click(bool isConfirmed)
    {
        if (isConfirmed && vessel.VesselId != 0)
        {
            try
            {
                var response = await _unitOfWork.Setups.RemoveVessel(vessel.VesselId);
                if (response == 1)
                {
                    _snackbar.Add("Vessel Deleted Successfully!", Severity.Success);
                    Elements = await _unitOfWork.Setups.GetAllVessels();
                    StateHasChanged();
                    vessel.VesselId = 0;
                }
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error deleting vessel: {ex.Message}", Severity.Error);
                vessel.VesselId = 0;
            }
        }
    }
}

