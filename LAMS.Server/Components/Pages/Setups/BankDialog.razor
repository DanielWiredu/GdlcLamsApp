@inject IUnitOfWork _unitOfWork
@inject ISnackbar _snackbar

<MudDialog>
    <DialogContent>
        <MudTextField Label="Bank Name"  @bind-Value="Model.BankName"  Required="true" RequiredError="Bank Name is required" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Save" Color="Color.Success" Variant="Variant.Filled">
            @(_isEdit ? "Update" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public TblBank Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private bool _isEdit;

    protected override void OnInitialized()
    {
        _isEdit = IsEdit;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(Model.BankName))
            return;

        if (_isEdit)
        {
            try
            {
                await _unitOfWork.Setups.UpdateBank(Model);
                _snackbar.Add("Bank updated successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error updating bank: {ex.Message}", Severity.Error);
                return;
            }  
        }
        else
        {
            try
            {
                await _unitOfWork.Setups.AddBank(Model);
                _snackbar.Add("Bank added successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error adding bank: {ex.Message}", Severity.Error);
                return;
            }
        }

        MudDialog.Close(DialogResult.Ok(true));
    }
}
