@inject IUnitOfWork _unitOfWork
@inject ISnackbar _snackbar

<MudDialog>
    <DialogContent>
        <MudTextField Label="Reporting Point"  @bind-Value="Model.ReportingPoint"  Required="true" RequiredError="Reporting Point is required" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Save" Color="Color.Success" Variant="Variant.Filled">
            @(_isEdit ? "Update" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public ReportingPointModel Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private bool _isEdit;

    protected override void OnInitialized()
    {
        _isEdit = IsEdit;
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(Model.ReportingPoint))
            return;

        if (_isEdit)
        {
            try
            {
                await _unitOfWork.ReportingPoints.Update(Model);
                _snackbar.Add("Reporting Point updated successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error updating reporting point: {ex.Message}", Severity.Error);
                return;
            }     
        }
        else
        {
            try
            {
                await _unitOfWork.ReportingPoints.Add(Model);
                _snackbar.Add("Reporting Point added successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error adding reporting point: {ex.Message}", Severity.Error);
                return;
            }
        }

        MudDialog.Close(DialogResult.Ok(true));
    }
}
