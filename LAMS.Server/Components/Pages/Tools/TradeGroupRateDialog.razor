@inject IUnitOfWork _unitOfWork
@inject ISnackbar _snackbar
@inject IJSRuntime JsRuntime;

<MudDialog MaxWidth="MaxWidth.ExtraLarge" FullWidth="true" Class="draggable-dialog">
    <DialogContent>
        <MudGrid>
            <!-- LEFT COLUMN -->
            <MudItem xs="12" md="6">
                <MudNumericField T="double?" Label="Share %" @bind-Value="Model.Dbwage" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
            </MudItem>
            <!-- RIGHT COLUMN -->
            <MudItem xs="12" md="6">
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default"> Cancel </MudButton>
        <MudButton OnClick="Save" Color="Color.Success"  Variant="Variant.Filled">
            @(_isEdit ? "Update" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public TblTradeGroupRate Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private bool _isEdit;

    protected override void OnInitialized()
    {
        _isEdit = IsEdit;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("makeDialogDraggable", ".draggable-dialog");
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        try
        {
            if (_isEdit)
            {
                // await _unitOfWork.Setups.UpdateDLECompany(Model);
                _snackbar.Add("DLE Company updated successfully", Severity.Success);
            }
            else
            {
                // await _unitOfWork.Setups.AddDLECompany(Model);
                _snackbar.Add("DLE Company added successfully", Severity.Success);
            }

            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            _snackbar.Add($"Error saving record: {ex.Message}", Severity.Error);
        }
    }
}
