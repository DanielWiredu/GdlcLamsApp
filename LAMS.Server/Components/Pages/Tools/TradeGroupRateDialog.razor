@inject IUnitOfWork _unitOfWork
@inject ISnackbar _snackbar
@inject IJSRuntime JsRuntime;
@inject ICurrentUserService _currentUser

<MudDialog MaxWidth="MaxWidth.ExtraLarge" FullWidth="true" Class="draggable-dialog">
    <DialogContent>
        <MudGrid>
            <!-- LEFT COLUMN -->
            <MudItem xs="12" md="6">
                <MudNumericField T="double?" Label="Basic Wage (Non-Shift)" @bind-Value="Model.Dbwage" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Basic Wage (S-80%)" @bind-Value="Model.DbwageWkend" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Basic Wage (S-100%)" @bind-Value="Model.DBWageHday" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Incentive (Non-Shift)" @bind-Value="Model.HourOtimeWkday" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Incentive (S-80%)" @bind-Value="Model.HourOtimeWkend" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Incentive (S-100%)" @bind-Value="Model.HourOtimeHday" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Night Allowance (Non-Shift)" @bind-Value="Model.Nawkday" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Night Allowance (S-80%)" @bind-Value="Model.Nawkend" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Night Allowance (S-100%)" @bind-Value="Model.NAHday" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
            </MudItem>
            <!-- RIGHT COLUMN -->
            <MudItem xs="12" md="6">
                <MudNumericField T="double?" Label="Shift Allowance" @bind-Value="Model.ShiftAllowance" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Transport Allowance" @bind-Value="Model.Transport" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Subsidy" @bind-Value="Model.Subsidy" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="PPE Medicals" @bind-Value="Model.Ppemedical" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
                <MudNumericField T="double?" Label="Bussing" @bind-Value="Model.Bussing" Immediate="true" HideSpinButtons="true" Required="true" RequiredError="Field is required" Format="F2" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudDatePicker Label="Effective Date" @bind-Date="Model.EffectiveDate" Required="true" RequiredError="Field is required" DateFormat="yyyy-MM-dd" ShowToolbar="false" />
            </MudItem>
            @if (_isEdit)
            {
                <MudItem xs="12" md="6">
                    <MudDatePicker Label="End Date" @bind-Date="Model.EndDate" DateFormat="yyyy-MM-dd" ShowToolbar="false" />
                </MudItem>
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default"> Cancel </MudButton>
        <MudButton OnClick="Save" Color="Color.Success"  Variant="Variant.Filled">
            @(_isEdit ? "Update" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public TblTradeGroupRate Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private bool _isEdit;

    protected override void OnInitialized()
    {
        _isEdit = IsEdit;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("makeDialogDraggable", ".draggable-dialog");
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Save()
    {
        try
        {
            var userId = await _currentUser.GetUserIdAsync();
            if (_isEdit)
            {
                Model.UpdatedBy = userId;
                Model.UpdatedDate = DateTime.UtcNow;
                int response = await _unitOfWork.Workers.UpdateTradeGroupRate(Model);
                if (response == 1)
                    _snackbar.Add("Trade Group Rate Updated Successfully", Severity.Success);
            }
            else
            {
                Model.CreatedBy = userId;
                int response = await _unitOfWork.Workers.AddTradeGroupRate(Model);
                if (response == 0)
                    _snackbar.Add("Trade Group Rate Saved Successfully", Severity.Success);
                else if (response == -20)
                    _snackbar.Add("A rate with the same effective date already exist for this Group", Severity.Error);
                else if (response == -19)
                    _snackbar.Add("Effective Date should be greater than that of existing rate for this Group", Severity.Error);
            }

            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            _snackbar.Add($"Error saving record: {ex.Message}", Severity.Error);
        }
    }
}
