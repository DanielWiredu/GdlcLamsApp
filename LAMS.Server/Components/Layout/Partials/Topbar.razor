@inject IJSRuntime JsRuntime;

@using Microsoft.AspNetCore.Authorization

<!-- Topbar Start -->
<header class="app-topbar">
    <div class="container-fluid topbar-menu">
        <div class="d-flex align-items-center gap-2">
            <!-- Topbar Brand Logo -->
